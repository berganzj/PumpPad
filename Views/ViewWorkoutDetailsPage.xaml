<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PumpPad.ViewWorkoutDetailsPage">
    <ContentPage.Content>
        <VerticalStackLayout Padding="10">
            <Label x:Name="WorkoutNoteLabel" 
                   FontSize="Medium" 
                   TextColor="Gray" 
                   Margin="0,0,0,10" />
            <ScrollView>
                <Grid x:Name="WorkoutGrid" Padding="10">
                    <!-- Grid content will be populated in the code-behind -->
                </Grid>
            </ScrollView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>